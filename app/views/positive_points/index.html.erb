<h1>Listing positive_points</h1>

<table class="table table-striped">
  <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Decription
        </th>
        <th>
            Point
        </th>
        <th>
            Category
        </th>
        <th style="text-align: center">
        </th>
    </tr>
  </thead>

  <tbody>
    <% @positive_points.each do |positive_point| %>
      <tr>
          <td><%= positive_point.title %></td>
          <td><%= positive_point.description %></td>
          <td><%= positive_point.points %></td>
          <td><%= positive_point.category %></td>
        <td><%= link_to 'Show', positive_point %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pull-right">
    <%= link_to 'Positive point attribution', attribution_positive_points_path, class: 'btn btn-primary' %>
</div>